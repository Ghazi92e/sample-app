<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <%= current_user.nom %>
    </span>
    <span class="microposts">
      <%= link_to "view my profile", current_user %><br/>
      <%= pluralize(current_user.microposts.count, "micropost") %>
    </span>
  </a>
</div>
